      <form action="search-informations" method="post">
        <div id='container_adaptable'>
          <div class="box">
            <label name="search_input">Localização</label>
            <input type="text">
          </div>
          <div class="box">
            <label name="search_input">Selecione datas</label>

            <div class="box_check">
              <div>
                <label name="box_check-in">Check in</label>
                <input type="date" name="box_check-in">
              </div>
              <div>
                <label name="box_check-out">Check-out</label>
                <input type="date" name="box_check-out">
              </div>
            </div>
          </div>
          <div class="box">
            <label name="search_input">Número de pessoas</label>
            <div id="guests">
              <div class="specification">
                <button>
                  <img class="subtract" src="images/search-spaces/search/subtract.png" alt="subtrair">
                </button>
                <input type="number" min="0" value="4" name="people" class="input_checked" disabled>
                <button>
                  <img class="addition" src="images//search-spaces/search/button-add.png" name="addition" alt="adicionar">
                </button>
              </div>
            </div>
          </div>

          <button class="search_mobile">Pesquisar</button>
        </div>
      </form>
    </div>
  </div>
  
  <div id='box_black'></div>

  <main>
    <div id="edit-ad" class="container_margin_default">
      <div class="default_margin">
        <aside id="edit-ad_sidebar">
          <a href="/meus-anuncios">
            <button id="come_back">
              <i class="fa-solid fa-chevron-left"></i>
              Voltar
            </button>
          </a>
          <ul>
            <li>
              <a href="#edit-ad_classification" class="active">Classificação</a>
            </li>
            <li>
              <a href="#edit-ad_basics_information">Informações <br> básicas</a>
            </li>
            <li>
              <a href="#edit-ad_localization">Localização</a>
            </li>
            <li>
              <a href="#rooms">Salas</a>
            </li>
          </ul>
        </aside>

        <form id="edit-ad_form" action="" method="" data-js='form'>
          <span>
            <h1>Escritório Lape</h1>

            <div class="select-box">
              <div class="options-container">
                <div class="option">
                  <input type="radio" class="radio" id="space" name="category" />
                  <option for="space">Espaço</option>
                </div>

                <div class="option">
                  <input type="radio" class="radio" id="space" name="category" />
                  <option for="space">Espaço</option>
                </div>

                <div class="option">
                  <input type="radio" class="radio" id="space" name="category" />
                  <option for="space">Espaço</option>
                </div>
              </div>

              <div class="selected">
                Mudar de espaço
              </div>
            </div>
          </span>

          <section id="edit-ad_classification">
            <div>
              <div class="type-box">
                <label for="type_of_environment">Tipo de ambiente</label>
                <div class="type-container">
                  <div class="type">
                    <input type="radio" class="radio1" id="adaptable" name="category" />
                    <option for="adaptable">Ambiente adaptável</option>
                  </div>

                  <div class="type">
                    <input type="radio" class="radio1" id="usual" name="category" />
                    <option for="usual">Ambiente usual</option>
                  </div>
                </div>

                <div class="selected-type">
                  Ambiente adaptável
                </div>
              </div>
            </div>

            <span>
              <div class="category-box">
                <label for="category">Categoria</label>
                <div class="category-container">
                  <div class="category">
                    <input type="radio" class="radio2" id="" name="category" />
                    <option for="">Teste 1</option>
                  </div>

                  <div class="category">
                    <input type="radio" class="radio2" id="" name="category" />
                    <option for="">Teste 2</option>
                  </div>
                </div>

                <div class="selected-category">
                  Categoria
                </div>
              </div>

              <div class="subcategory-box">
                <label for="subcategory">Subcategoria</label>
                <div class="subcategory-container">
                  <div class="subcategory">
                    <input type="radio" class="radio3" id="" name="subcategory" />
                    <option for="">Teste 1</option>
                  </div>

                  <div class="subcategory">
                    <input type="radio" class="radio3" id="" name="subcategory" />
                    <option for="">Teste 2</option>
                  </div>
                </div>

                <div class="selected-subcategory">
                  Subcategoria
                </div>
              </div>
            </span>
          </section>


          <section id="edit-ad_basics-information">
            <h2>Informações básicas</h2>

            <label for="photos">Fotos</label>
            <div class="photos">
              <div id="photo1"></div>
              <div id="photo2"></div>
              <div id="photo3"><button id="edit_photos">Editar</button></div>
            </div>

            <div>
              <label for="title">Título</label>
              <input class="outline-focus" type="text" name="title" id="title" />
            </div>

            <div>
              <label for="title">Descrição</label>
              <textarea class="outline-focus" type="text" name="description" id="description" rows="8"></textarea>
            </div>
          </section>

          <section id="edit-ad_localization">
            <h2>Localização</h2>
            <div>
              <label for="cep">CEP</label>
              <input class="outline-focus" type="text" name="cep_ad" id="cep_ad" />
            </div>

            <div class="flex">
              <div>
                <label for="rua">Rua</label>
                <input class="outline-focus" type="text" name="rua_ad" id="rua_ad" />
              </div>
              <div>
                <label for="number">Nº</label>
                <input class="outline-focus" type="text" name="number_ad" id="number_ad" />
              </div>
            </div>

            <span>
              <div>
                <label for="bairro">Bairro</label>
                <input class="outline-focus" type="text" name="bairro_ad" id="bairro-ad" />
              </div>
              <div>
                <label for="cidade">Cidade | Estado</label>
                <input class="outline-focus" type="text" name="cidade_estado_ad" id="cidade_estado_ad" />
              </div>
            </span>
          </section>

          <section id="edit-ad_rooms">
            <div>
              <input class="outline-focus" type="text" name="room" id="room" placeholder="Sala 01" />
            </div>

            <div class="edit-ad_room-flex">

              <ul class="general-features">
                <li>
                  <h2>Preço e características gerais</h2>
                  <input type="price" name="price" id="price" placeholder="R$: 0,00" />
                </li>

                <li>
                  <div>
                    <label for="size_people">Nº pessoas</label>
                    <p>Indicamos 1 pessoa/7m²</p>
                  </div>
                  <div class="specification">
                    <button><i class="fa-solid fa-minus subtract"></i></button>
                    <input type="number" min="0" value="1" name="size_people" disabled>
                    <button><i class="fa-solid fa-plus addition"></i></button>
                  </div>
                </li>

                <li>
                  <div>
                    <label for="size_room">Tamanho da sala</label>
                    <p>Em m²</p>
                  </div>
                  <input class="outline-focus" type="size_room" name="size_room" id="size_room" />
                </li>

                <li>
                  <div>
                    <label for="access_to_bathrooms">Acesso à banheiros</label>
                  </div>
                  <div class="specification">
                    <button><i class="fa-solid fa-minus subtract"></i></button>
                    <input type="number" min="0" value="1" name="access_to_bathrooms" disabled>
                    <button><i class="fa-solid fa-plus addition"></i></button>
                  </div>
                </li>
              </ul>

              <h2>Recursos</h2>

              <ul>
                <li class="resources-wifi">
                  <div class="resources-flex">
                    <img src="images/my-account/edit-ad/wifi.svg" alt="Ícone de Wifi">
                    <label for="wifi">Wifi</label>
                  </div>
                  <div class="wifi-box">
                    <div class="wifi-container">
                      <div class="wifi">
                        <input type="radio" class="radio4" id="" name="subcategory" />
                        <option for="">Baixa <br>qualid.</option>
                      </div>

                      <div class="wifi">
                        <input type="radio" class="radio4" id="" name="subcategory" />
                        <option for="">Média <br>qualid.</option>
                      </div>

                      <div class="wifi">
                        <input type="radio" class="radio4" id="" name="subcategory" />
                        <option for="">Alta <br>qualid</option>
                      </div>
                    </div>

                    <div class="selected-wifi">
                      Sinal do <br>Wi-fi
                    </div>
                  </div>
                </li>

                <li class="resources">
                  <div class="resources-flex">
                    <img src="images/my-account/edit-ad/computer.svg" alt="Ícone de computador">
                    <label for="computer">Computador</label>
                  </div>
                  <div class="specification">
                    <button><i class="fa-solid fa-minus subtract"></i></button>
                    <input type="number" min="0" value="1" name="computer" disabled>
                    <button><i class="fa-solid fa-plus addition"></i></button>
                  </div>
                </li>

                <li class="resources">
                  <div class="resources-flex">
                    <img src="images/my-account/edit-ad/sockets.svg" alt="Ícone de tomada">
                    <label for="sockets">Tomadas</label>
                  </div>
                  <div class="specification">
                    <button><i class="fa-solid fa-minus subtract"></i></button>
                    <input type="number" min="0" value="1" name="sockets" disabled>
                    <button><i class="fa-solid fa-plus addition"></i></button>
                  </div>
                </li>

                <li class="resources">
                  <div class="resources-flex">
                    <img src="images/my-account/edit-ad/air-conditioning.svg" alt="Ícone de ar-condicionado">
                    <label for="air-conditioning">Ar-<br>condicionado</label>
                  </div>
                  <div class="specification">
                    <button><i class="fa-solid fa-minus subtract"></i></button>
                    <input type="number" min="0" value="1" name="air-conditioning" disabled>
                    <button><i class="fa-solid fa-plus addition"></i></button>
                  </div>
                </li>

                <li class="resources">
                  <div class="resources-flex">
                    <img src="images/my-account/edit-ad/table.svg" alt="Ícone de mesa">
                    <label for="table">Mesas</label>
                  </div>
                  <div class="specification">
                    <button><i class="fa-solid fa-minus subtract"></i></button>
                    <input type="number" min="0" value="1" name="table" disabled>
                    <button><i class="fa-solid fa-plus addition"></i></button>
                  </div>
                </li>

                <li class="resources">
                  <div class="resources-flex">
                    <img src="images/my-account/edit-ad/seats.svg" alt="Ícone de assento">
                    <label for="seats">Assentos</label>
                  </div>
                  <div class="specification">
                    <button><i class="fa-solid fa-minus subtract"></i></button>
                    <input type="number" min="0" value="1" name="seats" disabled>
                    <button><i class="fa-solid fa-plus addition"></i></button>
                  </div>
                </li>

                <li class="resources">
                  <div class="resources-flex">
                    <img src="images/my-account/edit-ad/window.svg" alt="Ícone de janela">
                    <label for="window">Janela</label>
                  </div>
                  <div class="specification">
                    <button><i class="fa-solid fa-minus subtract"></i></button>
                    <input type="number" min="0" value="1" name="window" disabled>
                    <button><i class="fa-solid fa-plus addition"></i></button>
                  </div>
                </li>
              </ul>
            </div>
          </section>
        </form>
      </div>
    </div>
  </main>

  <footer class="container_margin_default">
    <%- include('../../partial/footer.ejs')%>
  </footer>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
